                        @_localizer["Add Company"]
                    </MudText>
                }
                else
                {
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
            @_localizer["Update Company"]: @AddEditCompanyModel.Name   
        </MudText>
                }
            }
        </TitleContent>
