        <MudItem xs="12" sm="12" md="12">

            <MudCard Square="false" Style="background-color:transparent;">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudSkeleton SkeletonType="SkeletonType.Rectangle" />
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudSkeleton SkeletonType="SkeletonType.Rectangle" />

                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>

                    <MudSkeleton SkeletonType="SkeletonType.Rectangle" />
                    <MudSkeleton SkeletonType="SkeletonType.Rectangle" />


                </MudCardContent>
                <MudCardActions>
                    <MudSkeleton SkeletonType="SkeletonType.Rectangle" />
