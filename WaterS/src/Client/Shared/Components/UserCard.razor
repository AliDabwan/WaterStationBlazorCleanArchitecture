@namespace WaterS.Client.Shared.Components
<MudCard Elevation="0" Square="true" Class="@Class">
    <MudCardHeader>
        <CardHeaderAvatar>
            @if (string.IsNullOrEmpty(ImageDataUrl))
            {
                <MudAvatar Color="Color.Secondary">@FirstLetterOfName</MudAvatar>
            }
            else
            {
                <MudAvatar Image="@ImageDataUrl" Style="height:50px; width:50px;"> </MudAvatar>
            } 
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body2">@FirstName</MudText>
           
            <MudText Typo="Typo.caption">@Phone</MudText>
        </CardHeaderContent>
    </MudCardHeader>
</MudCard>